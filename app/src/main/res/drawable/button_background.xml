<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">

    <!-- Фон -->
    <solid android:color="#4CAF50" />

    <!-- Скругления -->
    <corners android:radius="12dp" />

    <!-- Обводка -->
    <stroke
        android:width="2dp"
        android:color="#388E3C" />

    <!-- Внутренние отступы -->
    <padding
        android:left="16dp"
        android:top="8dp"
        android:right="16dp"
        android:bottom="8dp" />
</shape>