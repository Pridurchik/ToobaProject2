<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#00CE62"
    android:orientation="vertical"
    android:paddingStart="18dp"
    android:paddingEnd="18dp"
    android:gravity="center_vertical">

    <!-- Заголовок и суммы -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/background_title"
        android:orientation="vertical"
        android:padding="8dp">

        <!-- Заголовок -->
        <TextView
            android:id="@+id/title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:singleLine="false"
            android:maxLines="3"
            android:scrollHorizontally="false"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:text="У Лизы болезнь ДЦП, ей срочно необходимо реабилитация" />

        <!-- Секции нужно / собрано -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="2"
            android:layout_marginTop="8dp">

            <!-- Нужно -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/needed"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="10sp"
                    android:textColor="@color/black"
                    android:text="Нужно" />

                <TextView
                    android:id="@+id/needed_sum"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    android:text="51 813 ₽" />
            </LinearLayout>

            <!-- Собрано -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="end">

                <TextView
                    android:id="@+id/collected"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="10sp"
                    android:textColor="@color/black"
                    android:text="Собрано" />

                <TextView
                    android:id="@+id/collected_sum"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:textColor="#3DDFCB"
                    android:text="18 271 ₽" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <!-- Кнопка -->
    <Button
        android:id="@+id/help_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:background="@drawable/background_help"
        android:text="Помочь"
        android:textSize="16sp"
        android:paddingVertical="10dp"
        android:textColor="@android:color/white" />

    <!-- Лого -->
    <ImageView
        android:id="@+id/widget_logo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="16dp"
        android:src="@drawable/tooba"
        tools:ignore="ContentDescription" />

</LinearLayout>
